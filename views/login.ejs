<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <style>
        .font-title
        {
            font-family: 'Helvetica'; font-style: normal; font-weight: 700; font-size: 24px; line-height: 36px;
        }
        .font-word
        {
            font-family: 'Helvetica'; font-style: normal; font-weight: 300; font-size: 14px; line-height: 20px;
        }
        .submit-btn
        {
            background-color: #0D28A6; padding: 8px 12px; font-family: 'Helvetica'; font-style: normal; font-weight: 700; font-size: 14px; line-height: 20px;
        }
    </style>

    <title>Login</title>
  </head>
  <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <img src="../../public/bg-login.png" class="img-fluid" style="height:100%;" />
                </div>
                <div class="col-md-4 bg-white p-5">
                    <img src="../../public/logo.png" class="img-fluid mt-5" />
                    <h4 class="my-4 font-default">Welcome, Admin BCR</h4>
                    <div class="form-style">
                        <form action="/login" method="post">
                            <div class="form-group pb-3">
                                <p class="font-word mb-2">Email</p>
                                <input type="email" placeholder="Contoh: johndee@gmail.com" class="form-control" id="email">
                            </div>
                            <div class="form-group pb-3">
                                <p class="font-word mb-2">Password</p>
                                <input type="password" placeholder="6+ karakter" class="form-control" id="password">
                            <div class="pb-2">
                                <button type="submit" class="btn w-100 mt-4 text-light submit-btn">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>